{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "declaration": true,
    "target": "ESNext",
    "outDir": "./dist",
    "sourceMap": true,
    "resolveJsonModule": true,
    "alwaysStrict": true,
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "plugins": [{
      "transform": "typescript-is/lib/transform-inline/transformer"
    }]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
